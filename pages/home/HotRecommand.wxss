.hot_recommand .products {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}
.hot_recommand .products .product {
  position: relative;
  width: 33.33%;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  border-left: 1px solid #f5f5f5;
  background-color: #ffffff;
}
.hot_recommand .products .product .name {
  height: 12vw;
  line-height: 6vw;
  text-align: center;
}
.hot_recommand .products .product .brand {
  padding-top: 2vw;
  height: 6vw;
  line-height: 6vw;
  text-align: center;
}
