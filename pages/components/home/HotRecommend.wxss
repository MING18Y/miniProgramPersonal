.hot_recommand .products {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}
.hot_recommand .products .product {
  position: relative;
  width: 33.33%;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  border-left: 1px solid #f5f5f5;
  background-color: #ffffff;
}
.hot_recommand .products .product .product_mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 33.2vw;
  height: 26.212vw;
  background: url("/assets/images/product_mask2.png") no-repeat 0 0 / cover;
}
.hot_recommand .products .product .img_wrap {
  width: 100%;
  height: 26.212vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hot_recommand .products .product .img_wrap img {
  width: 70%;
}
.hot_recommand .products .product .img_wrap .onegloss {
  width: 64%;
}
.hot_recommand .products .product .name {
  height: 12vw;
  line-height: 6vw;
  text-align: center;
}
.hot_recommand .products .product .brand {
  padding-top: 2vw;
  height: 6vw;
  line-height: 6vw;
  text-align: center;
}
.hot_recommand .products .product .name {
  font-size: 0.69rem;
  color: #666666;
}
