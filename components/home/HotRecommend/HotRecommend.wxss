.hot_recommand .products {
  display: flex;
  flex-wrap: wrap;
}
.hot_recommand .products .product {
  position: relative;
  width: 33.33%;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  border-left: 1px solid #f5f5f5;
  background-color: #ffffff;
  padding: 20rpx;
}
.hot_recommand .products .product .img_wrap {
  width: 100%;
  height: 200rpx;
  padding: 30rpx 0;
}
.hot_recommand .products .product .img_wrap .product_img {
  max-width: 100%;
  max-height: 100%;
}
.hot_recommand .products .product .name {
  height: 12vw;
  line-height: 6vw;
  text-align: center;
}
.hot_recommand .products .product .brand {
  text-align: center;
  font-size: 30rpx;
}
.hot_recommand .products .product .name {
  font-size: 30rpx;
  color: #666666;
}
