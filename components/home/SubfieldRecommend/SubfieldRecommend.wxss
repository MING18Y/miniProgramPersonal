.subfield-recommend .products {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}
.subfield-recommend .products .product {
  position: relative;
  width: 50%;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  border-left: 1px solid #f5f5f5;
  background-color: #ffffff;
  padding: 0.5rem;
  display: flex;
  flex-direction: column;
}
.subfield-recommend .products .product div {
  width: 100%;
  text-align: center;
}
.subfield-recommend .products .product .img_wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.subfield-recommend .products .product .img_wrap img {
  height: 10rem;
}
.subfield-recommend .products .product .name {
  margin-top: 0.5rem;
  font-size: 0.75rem;
  line-height: 1rem;
  color: #333333;
  min-height: 2rem;
  max-height: 2rem;
  text-align: left;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.subfield-recommend .products .product .discount_wrap {
  width: 100%;
}
.subfield-recommend .products .product .discount_wrap div {
  display: flex;
  flex-wrap: wrap;
  margin: 0.5rem 0;
  min-height: 1rem;
}
.subfield-recommend .products .product .discount_wrap div .discount {
  font-size: 0.63rem;
  height: 1rem;
  line-height: 1rem;
  color: #6199d5;
  border: 1px solid #6199d5;
  padding: 0 0.2rem;
  margin-right: 0.2rem;
  margin-bottom: 0.2rem;
}
.subfield-recommend .products .product .price_wrap {
  flex: 1;
  align-items: flex-end;
  display: flex;
  justify-content: space-between;
}
.subfield-recommend .products .product .price_wrap .price {
  width: 25%;
  font-size: 0.81rem;
  color: #6199d5;
  text-align: left;
}
.subfield-recommend .products .product .price_wrap .original_price {
  width: 25%;
  font-size: 0.81rem;
  color: #666666;
  text-decoration: line-through;
  margin-right: 1rem;
  text-align: right;
}
.subfield-recommend .products .product .product_mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 49.5vw;
  height: 41.78vw;
  background: url("/assets/images/product_mask.png") no-repeat 0 0 / cover;
  display: flex;
  flex-direction: column;
}
